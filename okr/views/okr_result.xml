<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_okr_result_tree" model="ir.ui.view">
            <field name="name">Okr Result</field>
            <field name="model">okr.result</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="user_id"/>
                    <field name="objective_id"/>
                    <field name="weight"/>
                    <field name="target"/>
                    <field name="result"/>
                    <field name="progress"/>
                    <field name="department_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_okr_result_form" model="ir.ui.view">
            <field name="name">Okr Result</field>
            <field name="model">okr.result</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="user_id"/>
                            <field name="objective_id"/>
                            <field name="weight"/>
                            <field name="target"/>
                            <field name="result"/>
                            <field name="progress" widget="progressbar"/>
                            <field name="department_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="okr_result_view_search" model="ir.ui.view">
            <field name="name">okr.result.search</field>
            <field name="model">okr.result</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_okr_result" model="ir.actions.act_window">
            <field name="name">Okr Result</field>
            <field name="res_model">okr.result</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
