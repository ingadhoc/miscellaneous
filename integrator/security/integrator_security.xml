<odoo>

    <!-- category and main groups -->

    <record model="ir.module.category" id="module_category_integrator">
        <field name="name">Integrator</field>
        <field name="description">Integrator</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_integrator"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="category_id" ref="module_category_integrator"/>
        <field name="implied_ids" eval="[(4,ref('group_user'))]"/>
    </record>

</odoo>
