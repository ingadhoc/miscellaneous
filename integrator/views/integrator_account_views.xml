<odoo>

    <!-- SEARCH VIEW -->
    <record id="view_integrator_account_filter" model="ir.ui.view">
        <field name="name">integrator.account.select</field>
        <field name="model">integrator.account</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Account Name"/>
                <filter domain="[('state', '=', 'confirmed')]" name="confirmed" string="Confirmed Accounts"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter name="group_by_state" string="State" context="{'group_by':'state'}" groups="base.group_user"/>
                </group>
            </search>
        </field>
    </record>

    <!-- FORMVIEW -->
    <record id="view_integrator_account_form" model="ir.ui.view">
        <field name="name">integrator.account.form</field>
        <field name="model">integrator.account</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" string="Test and Confirm" class="oe_highlight" name="test_and_confirm" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button type="object" string="Back to Draft" states="confirmed" name="back_to_draft"/>
                    <field name="state" widget="statusbar" statusbar_colors='{}'/>
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <div name="account_params">
                        <group name="odoo" string="Remote Odoo Database">
                            <group>
                                <field name="odoo_hostname" placeholder="e.g. https://mycompany.adhoc.ar" />
                                <field name="odoo_db_name" placeholder="e.g. mycompany" />
                                <field name="odoo_user" />
                                <field name="odoo_password" password="True"/>
                            </group>
                        </group>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- TREEVIEW -->
    <record id="view_integrator_account_tree" model="ir.ui.view">
        <field name="name">integrator.account.tree</field>
        <field name="model">integrator.account</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'draft'">
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_integrator_account" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="res_model">integrator.account</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
    </record>

    <menuitem id="menu_integrator_accounts" sequence="6" parent="menu_integrator_integrations" action="action_integrator_account" />

</odoo>
