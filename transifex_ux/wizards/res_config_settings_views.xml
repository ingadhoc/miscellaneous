<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@name,'integration')]">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label string="Transifex ADHOC"/>
                        <div class="text-muted">
                            Set in order to make ADHOC translations easier
                        </div>
                        <field name="tx_adhoc_url"/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label string="Transifex OCA"/>
                        <div class="text-muted">
                            Set in order to make OCA translations easier
                        </div>
                        <field name="tx_oca_url"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
