<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_okr_form" model="ir.ui.view">
            <field name="name">OKR Form</field>
            <field name="model">okr.okr</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="target_value"/>
                            <field name="current_value"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_days"/>
                            <field name="progress_percentage" widget="progressbar"/>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_okr_tree" model="ir.ui.view">
            <field name="name">OKR Tree</field>
            <field name="model">okr.okr</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_current_quarter"/>
                    <field name="target_value"/>
                    <field name="current_value"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="progress_percentage" widget="progressbar"/>
                    <field name="duration_days"/>
                </tree>
            </field>
        </record>

        <record id="action_okr" model="ir.actions.act_window">
            <field name="name">OKR</field>
            <field name="res_model">okr.okr</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_okr" name="OKR" action="action_okr"/>
    </data>
</odoo>
